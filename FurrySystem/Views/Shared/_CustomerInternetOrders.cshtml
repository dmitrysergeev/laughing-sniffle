@model IEnumerable<FurrySystem.Models.CustomerInternetOrder>

@{
	<table class="table">
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.OrderDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Tariff)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.AddRouter)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Disabled)
			</th>
			<th></th>
		</tr>

		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.OrderDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Tariff.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.AddRouter)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Disabled)
				</td>
				<td>
					@if (!item.Disabled)
					{
						using (Html.BeginForm("DeleteInternetOrder", "CustomersOrders", new {id = item.Id}))
						{
							@Html.AntiForgeryToken()
							@Html.Hidden("customerId", item.Customer.Id)
							<input type="submit" value="Disable" class="btn btn-default"/>
						}
					}
				</td>
			</tr>
		}
	</table>
}