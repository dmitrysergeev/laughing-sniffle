@model FurrySystem.Models.InternetTariff

@{
	ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
	<h4>Internet Tariff</h4>
	<hr/>
	<dl class="dl-horizontal">
		@{
			foreach (ModelMetadata property in ViewData.ModelMetadata.Properties)
			{
				if (string.Equals(property.PropertyName, "Id", StringComparison.InvariantCultureIgnoreCase))
				{
					continue;
				}

				<dt>
					@Html.DisplayName(property.DisplayName ?? property.PropertyName)
				</dt>
				<dd>
					@Html.Display(property.PropertyName)
				</dd>
			}
		}
	</dl>

	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div class="form-actions no-color">
			<input type="submit" value="Delete" class="btn btn-default"/> |
			@Html.ActionLink("Back to List", "Index")
		</div>
	}
</div>