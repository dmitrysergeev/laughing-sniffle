@{
	ViewBag.Title = "Home Page";
}

<div class="jumbotron">
	<h1 class="logo">Furry System</h1>
	<p class="lead mtxl">The best CRM powered by ASP.NET MVC along with HTML, CSS and JavaScript.</p>
	@*<p>
		<a href="http://asp.net" class="btn btn-primary btn-large">Learn more &raquo;</a>
	</p>*@
</div>

<div class="row">
	<div class="col-md-4">
		<h2>Search for customers</h2>
		<p class="index-tip">
			Search for cutomers to check or edit their data, see customer's orders and create new customers or orders.
		</p>
		<p>
			@Html.ActionLink("Search »", "Index", "Customers", null, new { @class= "btn btn-default" })
		</p>
	</div>
	<div class="col-md-4">
		<h2>Watch internet tariffs</h2>
		<p class="index-tip">Search for internet tariffs or add new one.</p>
		<p>
			@Html.ActionLink("Watch »", "Index", "InternetTariffs", null, new { @class = "btn btn-default" })
		</p>
	</div>
	<div class="col-md-4">
		<h2>Analyze statistics</h2>
		<p class="index-tip">Check orders statistics data in general or by person for any period of time.</p>
		<p>
			@Html.ActionLink("Check »", "Index", "Statistics", null, new { @class = "btn btn-default" })
		</p>
	</div>
</div>