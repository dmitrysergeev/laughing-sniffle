@model FurrySystem.Models.CustomerDetailsModel

@{
	ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
	<h4>Customer</h4>
	<hr/>
	<dl class="dl-horizontal">
		@Html.Partial("_CustomerDetailsPartial", Model.Customer)
	</dl>
	<p>
		@Html.ActionLink("Edit", "Edit", new {id = Model.Customer.Id})
	</p>

	<hr/>

	<h4>Internet orders</h4>
	@Html.Partial("_CustomerInternetOrders", Model.CustomerInternetOrders)
